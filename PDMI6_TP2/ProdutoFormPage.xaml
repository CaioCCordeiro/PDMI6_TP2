<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDMI6_TP2.ProdutoFormPage">
    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="Medium" Grid.Row="2" TextColor="Black" Text="Id"/>
            <Entry Grid.Row="2" Grid.Column="1" x:Name="Id" Keyboard="Numeric"/>
            <Label FontSize="Medium" Grid.Row="3" TextColor="Black" Text="Descricao"/>
            <Entry  Grid.Column="1" Grid.Row="3" x:Name="Descricao"/>
            <Label FontSize="Medium" Grid.Row="3" TextColor="Black" Text="Categoria"/>
            <Entry  Grid.Column="1" Grid.Row="3" x:Name="Categoria"/>
            <Label FontSize="Medium" Grid.Row="3" TextColor="Black" Text="Quantidade"/>
            <Entry  Grid.Column="1" Grid.Row="3" x:Name="Quantidade" Keyboard="Numeric"/>
            <Label FontSize="Medium" Grid.Row="3" TextColor="Black" Text="Preco"/>
            <Entry  Grid.Column="1" Grid.Row="3" x:Name="Preco" Keyboard="Numeric"/>
            <Button TextColor="Black" Text="Avançar" Clicked="bntAvancar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>